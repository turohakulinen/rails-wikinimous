<h1>New Article</h1>

<%= form_for @article do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, size: "60"%>
  <%= f.label :content %>
  <%= f.text_area :content, size: "60x12", id: "editor" %>
  <%= f.submit %>
<% end %>

